<Window x:Class="Gyumin.Graphics.RayTracer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Gyumin.Graphics.RayTracer"
        Title="Ray Tracer by Gyumin Sim" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">
    <DockPanel>
        <Menu x:Name="xMenu" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Import .obj" />
                <MenuItem Header="_Export .png" />
            </MenuItem>
            <MenuItem Header="_Render">
                <MenuItem Header="_Start" x:Name="xStart" />
                <Separator />
                <MenuItem Header="Soft shado_w" IsCheckable="True" x:Name="xSoftShadow" />
            </MenuItem>
        </Menu>
        <Grid>
            <Image x:Name="xImage"
               Width="{x:Static local:Config.ImageWidthD}"
               Height="{x:Static local:Config.ImageHeightD}" />
            <ProgressBar x:Name="xProgress"
                     Height="20"
                     VerticalAlignment="Bottom"
                     Visibility="Collapsed"
                     />
        </Grid>
    </DockPanel>
</Window>
